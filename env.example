# RouterOS SDK - Environment Variables Example
# Copy this file to .env and modify the values according to your setup

# =============================================================================
# ROUTEROS CONNECTION SETTINGS
# =============================================================================

# RouterOS device IP address or hostname
ROUTEROS_HOST=192.168.88.1

# RouterOS API port (8728 for non-secure, 8729 for secure)
ROUTEROS_PORT=8728

# RouterOS username for authentication
ROUTEROS_USERNAME=admin

# RouterOS password for authentication
ROUTEROS_PASSWORD=password

# Use secure connection (TLS/SSL) - true/false
ROUTEROS_SECURE=false

# Enable debug mode for detailed logging - true/false
ROUTEROS_DEBUG=false

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Port for the REST API server
PORT=3000

# =============================================================================
# EXAMPLE USAGE
# =============================================================================

# For local development with Docker RouterOS:
# ROUTEROS_HOST=localhost
# ROUTEROS_PORT=8728
# ROUTEROS_USERNAME=admin
# ROUTEROS_PASSWORD=
# ROUTEROS_SECURE=false
# ROUTEROS_DEBUG=true

# For production RouterOS device:
# ROUTEROS_HOST=192.168.1.1
# ROUTEROS_PORT=8728
# ROUTEROS_USERNAME=admin
# ROUTEROS_PASSWORD=your_secure_password
# ROUTEROS_SECURE=false
# ROUTEROS_DEBUG=false